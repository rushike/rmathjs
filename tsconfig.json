{
  "compilerOptions": {                        
    "target": "ES2020",                               
    "module": "CommonJS",
    "lib": ["ES2020", "es7", "es6", "dom"],                      
    "outDir": "lib",                        
    "rootDir": "src",                             
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames" :true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions" : true,
    "noEmit": true
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.d.ts", "performance.js"],
  "exclude":[
    "node_modules",
    "dist"
  ]
}